type PalLimits {
  minAge Int?
  number Int?
  sex    Int?
}
type NeedPayment {
  way    PaymentMethod
  number Int?
}


model Need {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  needer      User       @relation(fields: [neederId], references: [id])
  neederId    String     @db.ObjectId
  description String?
  images      String[]
  keywords    String?
  location    String?
  limits      PalLimits?
  payment     NeedPayment?
  time        String?
}
